<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    tools:context=".fragment.ProfileFragment">




    <LinearLayout
        android:id="@+id/llRegContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="20dp">

            <TextView
                android:id="@+id/edtEpNa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_user"
                android:drawablePadding="10dp"
                android:padding="10sp"
                android:background="@drawable/layout_bg"
                android:hint="Name"
                android:inputType="text"
                android:paddingBottom="15dp"
                android:text="John Watson"
                android:textColor="@color/textColor1"
                android:textSize="@dimen/edt_text_size" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="8dp" />

            <TextView
                android:id="@+id/edtEpAdd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_home_address"
                android:drawablePadding="10dp"
                android:padding="10sp"
                android:background="@drawable/layout_bg"
                android:hint="Address"
                android:inputType="text"
                android:paddingBottom="15dp"
                android:text="221b backer street"
                android:textColor="@color/textColor1"
                android:textSize="@dimen/edt_text_size" />


        <Space
            android:layout_width="wrap_content"
            android:layout_height="8dp" />

            <TextView
                android:id="@+id/edtEpPhNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_phone_receiver"
                android:drawablePadding="10dp"
                android:hint="Phone "
                android:padding="10sp"
                android:background="@drawable/layout_bg"
                android:inputType="number"
                android:paddingBottom="15dp"
                android:text="98745632145"
                android:textColor="@color/textColor1"
                android:textSize="@dimen/edt_text_size" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="8dp" />

            <TextView
                android:id="@+id/edtEpEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_mail"
                android:drawablePadding="10dp"
                android:hint="Email "
                android:padding="10sp"
                android:background="@drawable/layout_bg"
                android:inputType="textEmailAddress"
                android:paddingBottom="15dp"
                android:text="John@xyz.com"
                android:textColor="@color/textColor1"
                android:textSize="@dimen/edt_text_size" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnClose"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_gravity="center"
            android:backgroundTint ="@color/buttonBgGrey"
            android:text="Close"
            android:textColor="@color/textColor1"
            app:cornerRadius="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:strokeColor="@color/textColor1"
            app:strokeWidth="2dp" />


    </LinearLayout>

    <ProgressBar
        android:id="@+id/pbProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/btnUpdateProfile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnUpdateProfile" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnUpdateProfile"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/buttonBgGrey"
        android:text="Update"
        android:textColor="@color/textColor1"
        android:visibility="invisible"
        app:cornerRadius="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>