<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/nav_header_bg"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/imgNavHeadUserDP"
        android:layout_width="70dp"
        android:layout_height="70sp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:padding="10sp"
        android:adjustViewBounds="true"
        android:background="@drawable/layout_bg"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_round_person"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvNavHeadUserNa"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:layout_marginEnd="8dp"
        android:text="Guest user"
        android:textColor="@color/textColor1"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imgNavHeadUserDP"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.909"
        app:layout_constraintStart_toEndOf="@+id/imgNavHeadUserDP"
        app:layout_constraintTop_toTopOf="@+id/imgNavHeadUserDP"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tvNavHeadUserEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="8dp"
        android:text="Guest@xyz.com"
        android:textColor="@color/textColor1"
        app:layout_constraintBottom_toBottomOf="@+id/imgNavHeadUserDP"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvNavHeadUserNa"
        app:layout_constraintTop_toBottomOf="@+id/tvNavHeadUserNa"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>